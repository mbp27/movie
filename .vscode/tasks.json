{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "flutter",
            "label": "Flutter Build Development",
            "command": "flutter",
            "args": [
                "build",
                "${input:buildType}",
                "--target=lib/main_development.dart",
                "--dart-define",
                "appName=Movie App Dev",
                "--dart-define",
                "baseUrl=api.themoviedb.org",
                "--dart-define",
                "versionApi=3",
                "--dart-define",
                "apiKey=24c248ac3009004de53d6709c8ae9c16",
                "--flavor",
                "development"
            ],
            "group": "build",
        },
        {
            "type": "flutter",
            "label": "Flutter Build Production",
            "command": "flutter",
            "args": [
                "build",
                "${input:buildType}",
                "--target=lib/main_production.dart",
                "--dart-define",
                "appName=Movie App",
                "--dart-define",
                "baseUrl=api.themoviedb.org",
                "--dart-define",
                "versionApi=3",
                "--dart-define",
                "apiKey=24c248ac3009004de53d6709c8ae9c16",
                "--flavor",
                "production"
            ],
            "group": "build",
        },
    ],
    "inputs": [
        {
          "type": "pickString",
          "id": "buildType",
          "description": "What type build do you want?",
          "options": [
            "appbundle",
            "apk",
            "ios",
            "ipa",
          ],
          "default": "appbundle"
        },
      ]
}